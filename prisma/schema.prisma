generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model notes {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  v         Int      @map("__v")
  content   String
  createdAt DateTime @db.Date
  title     String
  updatedAt DateTime @db.Date
}

model products {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  v         Int      @map("__v")
  createdAt DateTime @db.Date
  image     String
  name      String
  price     Float?
  updatedAt DateTime @db.Date
}
